<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="uncc.vedhasd.smartutility.UserRegister"
        android:background="#ae32bf63">

        <TextView
            android:id="@+id/tUserHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID:"
            android:textSize="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tAppname"
            android:layout_below="@+id/tUserHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Appliance"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eAppname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tAppname"
            android:inputType="text"
            android:layout_marginLeft="0dp"
            android:contentDescription="ss" />

        <TextView
            android:id="@+id/tEnergy"
            android:layout_below="@+id/eAppname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Energy (in Watts)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eEnergy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tEnergy"
            android:textSize="16dp"
            android:inputType="number"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tOpTime"
            android:layout_below="@+id/eEnergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Time operated(in mins)"
            android:layout_alignRight="@+id/bBack"
            android:layout_alignEnd="@+id/bBack"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eOpTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tOpTime"
            android:textSize="16dp"
            android:inputType="number"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tStartTime"
            android:layout_below="@+id/eOpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Switch On Time(24hr clock)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eStartTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tStartTime"
            android:inputType="time"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tDeadline"
            android:layout_below="@+id/eStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Switch Off Time(24hr clock)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eDeadline"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/tDeadline"
            android:inputType="time"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tConstraint"
            android:layout_below="@+id/eDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Load(Bulky or Light)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eConstraints"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tConstraint"
            android:inputType="text"
            android:layout_marginTop="10dp" />

        <!-- Spinner will come here  -->
        <!--
        <TextView
            android:id="@+id/tPhoneno"
            android:layout_below="@+id/tEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/tPassword"
            android:text="Phone Number"/>

        <EditText
            android:id="@+id/ePhoneno"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@+id/tPhoneno"
            android:layout_below="@+id/eEmail"
            android:layout_toRightOf="@+id/tPhoneno"
            android:inputType="phone" />
         -->

        <Button
            android:id="@+id/bCancel"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/eConstraints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_toRightOf="@+id/bBack"
            android:textColor="#231a4b" />

        <Button
            android:id="@+id/bAdd"
            android:layout_below="@+id/eConstraints"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD App"
            android:textColor="#231a4b" />

        <Button
            android:id="@+id/bBack"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/eConstraints"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/bAdd"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#231a4b" />
        <!--
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/eAppname"
                android:layout_below="@+id/eDeadline"
                android:entries="@+id/" />
        -->
    </RelativeLayout>

</ScrollView>