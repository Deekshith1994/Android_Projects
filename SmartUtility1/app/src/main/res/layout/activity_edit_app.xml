
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="uncc.vedhasd.smartutility.UserRegister"
        android:background="#ae32bf63">

        <TextView
            android:id="@+id/teUserHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID:"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teAppname"
            android:layout_below="@+id/teUserHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Appliance"
            android:textColor="#231a4b"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/eeAppname"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/teAppname"
            android:inputType="text" />

        <TextView
            android:id="@+id/teEnergy"
            android:layout_below="@+id/eeAppname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Energy(in Watts)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eeEnergy"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teEnergy"
            android:textSize="16dp"
            android:inputType="number"
            android:textColor="#231a4b" />

        <TextView
            android:id="@+id/teOpTime"
            android:layout_below="@+id/eeEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Time operated(in mins)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eeOpTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teOpTime"
            android:textSize="16dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/teStartTime"
            android:layout_below="@+id/eeOpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Switch On Time(24hr clock)"
            android:textColor="#231a4b"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eeStartTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/teStartTime"
            android:inputType="time" />

        <TextView
            android:id="@+id/teDeadline"
            android:layout_below="@+id/eeStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Switch Off Time(24hr clock)"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eeDeadline"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/teDeadline"
            android:inputType="time" />

        <TextView
            android:id="@+id/teConstraint"
            android:layout_below="@+id/eeDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Load(Bulky or Light )"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eeConstraints"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/teConstraint"
            android:inputType="text" />

        <!-- Spinner will come here  -->
        <!--
        <TextView
            android:id="@+id/tPhoneno"
            android:layout_below="@+id/tEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/tPassword"
            android:text="Phone Number"/>

        <EditText
            android:id="@+id/ePhoneno"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@+id/tPhoneno"
            android:layout_below="@+id/eEmail"
            android:layout_toRightOf="@+id/tPhoneno"
            android:inputType="phone" />
         -->



        <Button
            android:id="@+id/beDone"
            android:layout_below="@+id/teConstraint"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD APP"/>

        <Button
            android:id="@+id/beBack"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/teConstraint"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/beDone"
            android:layout_height="wrap_content"
            android:text="Back"/>
