
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="uncc.vedhasd.smartutility.UserRegister"
        android:background="#ae32bf63">

        <TextView
            android:id="@+id/tHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FORM"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tUsername"
            android:layout_below="@+id/tHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:textColor="#231a4b"
            android:textStyle="bold"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/eUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tUsername"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tPassword"
            android:layout_below="@+id/eUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#231a4b"
            android:textStyle="bold"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ePassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tPassword"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tVerifyPassword"
            android:layout_below="@+id/ePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Verify Password"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#231a4b" />

        <EditText
            android:id="@+id/eVerifyPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tVerifyPassword"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tFirstname"
            android:layout_below="@+id/eVerifyPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="First Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#231a4b" />

        <EditText
            android:id="@+id/eFirstname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tFirstname"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tLastname"
            android:layout_below="@+id/eFirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Last Name"
            android:textColor="#231a4b"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eLastname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tLastname"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tEmail"
            android:layout_below="@+id/eLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="E-mail"
            android:textColor="#231a4b"
            android:textStyle="bold"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/eEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tEmail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tPhoneno"
            android:layout_below="@+id/eEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone Number"
            android:textSize="18dp"
            android:textColor="#231a4b"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ePhoneno"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/tPhoneno"
            android:inputType="phone"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/bReset"
            android:layout_below="@+id/ePhoneno"
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="CLEAR"/>

        <Button
            android:id="@+id/bRegister"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ePhoneno"
            android:layout_width="120dp"
            android:layout_toRightOf="@+id/bReset"
            android:layout_height="wrap_content"
            android:text="Register"/>

        <Button
            android:id="@+id/bBack"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ePhoneno"
            android:layout_width="120dp"
            android:layout_toRightOf="@+id/bRegister"
            android:layout_height="wrap_content"
            android:text="Back"/>

        <CheckBox
            android:id="@+id/cAgreeMent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bRegister"
            android:layout_below="@+id/bRegister"
            android:layout_marginTop="43dp"
            android:text="Terms and Conditions"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>