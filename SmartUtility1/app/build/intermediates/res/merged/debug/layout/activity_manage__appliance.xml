
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="uncc.vedhasd.smartutility.Manage_Appliance"
        android:background="#ae32bf63">

        <TextView
            android:id="@+id/tManageAppHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLIANCE MANAGEMENT"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#231a4b" />

        <Button
            android:id="@+id/bAddApp"
            android:layout_below="@+id/tManageAppHeader"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add an Appliance"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/bViewApp"
            android:layout_below="@+id/AppSpinner"
            android:layout_centerHorizontal="true"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="View Details of the Appliance"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true">

        </Button>

        <Button
            android:id="@+id/bEditApp"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Edit Details of the Appliance"
            android:layout_alignBottom="@+id/bViewApp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        </Button>

        <Button
            android:id="@+id/bDelApp"
            android:layout_below="@+id/bEditApp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Delete selected Appliance"
            android:layout_marginTop="20dp">

        </Button>

        <Spinner
            android:id="@+id/AppSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bAddApp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:prompt="@+id/AppSpinner"
            tools:context="uncc.vedhasd.smartutility.Manage_Appliance" />

    </RelativeLayout>

</ScrollView><!-- From: file:/C:/Users/kdeek/AndroidStudioProjects/SmartUtility1/app/src/main/res/layout/activity_manage__appliance.xml -->